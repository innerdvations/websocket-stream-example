{  
  "compilerOptions": {  
  "target": "ESNext",  
    "module": "ESNext",  
    "rootDir": "src",  
    "outDir": "dist",  
    "sourceMap": true,  
    "resolveJsonModule": true,  
    "lib": ["es6"],  
    "moduleResolution": "node",
    "esModuleInterop": true  
  },  
  "include": [  
    "src/**/*.ts"  
  ],  
  "exclude": [  
    "node_modules"  
  ]  
}  
